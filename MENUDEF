OptionMenu "mcm_ZChecker_InfoPanelControl" {
    Title "Information panel control"
    StaticText " "

	Slider "Screen start X, %", "mcm_zchecker_infopanel_startx", 0.0, 100.0, 1.0, 0
	Slider "Screen start Y, %", "mcm_zchecker_infopanel_starty", 0.0, 100.0, 1.0, 0
	Slider "Screen offset X, %", "mcm_zchecker_infopanel_offsetx", 0.0, 100.0, 1.0, 0
	Slider "Scaling", "mcm_zchecker_infopanel_scale", 0.5, 4.0, 0.1, 1
}

OptionMenu "mcm_ZCheckerSubmenu_states" {
	Title "ZChecker: States extra options"

	ScaleSlider "Amount", "mcm_zchecker_infoset_statesamount", 0, 25, 1, "Unlimited"
	Option "Spawn +STEALTH", "mcm_zchecker_ev_spawnstealth", "YesNo"
	Option "Spawn +INVISIBLE", "mcm_zchecker_ev_spawninvisible", "YesNo"
}


AddOptionMenu "OptionsMenu" {
	StaticText " "
	Submenu "ZChecker Control", "mcm_ZChecker_Control"
}

OptionValue "mcm_zchecker_LogLevels" {
	0, "0. Emergency only"
	1, "1. Main/default"
	2, "2. Detailed"
	3, "3. Debug mode"
}
