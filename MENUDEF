	Option "Font", "mcm_zchecker_fonttype", "mcm_ZCheckerOption_InfoPanelFontTypes"
}

OptionMenu "mcm_ZChecker_ControlMenu_MapEverything" {
    Title "ZChecker: \"Everything\" map settings"
    StaticText " "

    StaticText "Spawn options", GOLD
	Option "Spawn +STEALTH actors:", "mcm_zchecker_ev_spawnstealth", "YesNo"
	Option "Spawn +INVISIBLE actors: ", "mcm_zchecker_ev_spawninvisible", "YesNo"
	Option "Spawn actors with sprite \"TNT1A0\": ", "mcm_zchecker_ev_spawntnt1a0", "YesNo"
	Option "Spawn actors with sprite \"PLYC*\": ", "mcm_zchecker_ev_spawnplyc", "YesNo"

    StaticText " "
    StaticText "Mapping", GOLD
    StaticText "This option allows using a special \"Everything\" map", DARKGRAY
    StaticText "scripts for any map, skipping the conformity check.", DARKGRAY
	Option "Force use map scripts", "mcm_zchecker_ev_forcemap", "YesNo"
}

OptionMenu "mcm_ZChecker_ControlMenu_CallCCMD" {
    Title "ZChecker: call console command"

    StaticText " "
    StaticText "[WIP] Some frequently used commands will be here.", DARKGRAY
    StaticText "All commands may be shown via \"zchelp all\";", DARKGREEN
    StaticText "Also you may use a \"zchelp <command>\".", DARKGREEN
    StaticText " "
    StaticText " "

    StaticText "Command examples:", GOLD
    StaticText " "

	Command "\"zcadd\": Add linetarget to panel", "zcadd"
	Command "\"zcadd self\": Add self to panel", "zcadd self"
	Command "\"zcrem\": Clear all panels", "zcrem"

    // See "ZScript/ZCMenus.zsc" for the full menu code.
	//class "ZCOptionMenuCallCCMD"
}


