// ZChecker menu definitions.

AddOptionMenu "OptionsMenu" {
	StaticText " "
	Submenu "ZChecker Control", "mcm_ZChecker_ControlMenu"
}

OptionMenu "mcm_ZChecker_ControlMenu" {
    Title "ZChecker control"
	StaticText " "

	StaticText "Information panels", GOLD
	Submenu "Panels control", "mcm_ZChecker_ControlMenu_Panels"
	Submenu "Panels visual settings", "mcm_ZChecker_ControlMenu_PanelsPosition"
	Control "Open panels order menu", "openmenu mcm_ZChecker_ControlMenu_Panels"

	StaticText " "
	StaticText "Console commands menu [WIP]", GOLD
	Submenu "Call console command", "mcm_ZChecker_ControlMenu_CallCCMD"
	Control "Open CCMD call menu", "openmenu mcm_ZChecker_ControlMenu_CallCCMD"

	StaticText " "
	StaticText "Other options", GOLD
	Submenu "\"Everything\" map settings", "mcm_ZChecker_ControlMenu_MapEverything"
	StaticText " "
	Option "Allow dangerous actions", "mcm_zchecker_allowdangerccmds", "YesNo"
    StaticText "Allows operations which may cause game to crash:", DARKGRAY
	StaticText " "
	Option "Log level", "mcm_zchecker_loglevel", "mcm_ZCheckerOption_LogLevels"
    StaticText "Will be updated after up to five world tics.", DARKGRAY
}

OptionMenu "mcm_ZChecker_ControlMenu_Panels" protected {
    Title "ZChecker panels"

    // See "ZScript/ZCMenus.zsc" for the full menu code.
    class "ZCOptionMenuPanels"
}

