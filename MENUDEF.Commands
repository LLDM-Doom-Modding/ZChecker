// === Command menus ===

// "zcadd":
OptionMenu "ZChecker_CommandsMenu_zcadd" {
    Title "zcadd menu"

	ZCCommandKeeper 2, "cvar:lldm_zcmenuarg_zcaddrem   0 static:zcadd"
	ZCCommandExecute "Execute"
	ZCCommandVisual " "
    StaticText " "

	ZCOption "Panel number", 2, "paneladd", "ZCheckerOptionCCMD_zcadd_panel"
	ZCOption "Actor source", 1, "addsrc", "ZCheckerOptionCCMD_zcadd_source"
}

OptionString "ZCheckerOptionCCMD_zcadd_source" {
	"", "Linetarget"
	"self", "Player itself"
	"weapon", "Weapon"
	"force", "Ethereal linetarget"
}

OptionString "ZCheckerOptionCCMD_zcadd_panel" {
	"", "First free"
	"1", "1 (left)"
	"2", "2 (middle)"
	"3", "3 (right)"
}



