// "zcgive"/"zctake":
OptionMenu "ZChecker_CommandsMenu_zcgivetake" {
    Title "zcgive/zctake menu"

	ZCCommandKeeper 3, "cvar:lldm_zcmenuarg_zcgivetake   0 default:cmd:zcgive   1 cvar:lldm_zcmenuarg_actorsource   2 default:cls:-   3 default:q:1"
	ZCCommandExecute "Execute"
	ZCCommandVisual " "
    StaticText " "

	ZCClassnameField "Inventory name",	2, "cls"
	ZCNumberField "Quantity, 1..1E6",	3, "q", 1, 1000000, 1
	ZCStaticText "Quantity can be set with left/right arrows or direct input", DARKGRAY
	ZCStaticText ""
	ZCOption "Give/take",       0, "cmd", "ZCheckerOptionCCMD_zcgivetake_maincmd"
	ZCOption "Actor source",    1, "src", "ZCheckerOptionCCMD_actorsource"

}

OptionString "ZCheckerOptionCCMD_zcgivetake_maincmd" {
	"zcgive", "Give to actor"
	"zctake", "Take from actor"
}


